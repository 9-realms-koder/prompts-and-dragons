{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd ../.. && npm ci && npm run build --workspace=@neonrealms/web"
  },
  "deploy": {
    "startCommand": "cd ../.. && npm run start --workspace=@neonrealms/web",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
