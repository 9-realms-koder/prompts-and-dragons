# NeonRealms Environment Variables
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/neonrealms

# Redis
REDIS_URL=redis://localhost:6379

# Authentication (OAuth)
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Discord OAuth
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# AI / LLM
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
LLM_PROVIDER=claude
LLM_MAX_TOKENS=2000

# API
API_PORT=4000
ALLOWED_ORIGINS=http://localhost:3000
